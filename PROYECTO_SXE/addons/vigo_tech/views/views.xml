<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_vigotech" model="ir.ui.view">
        <field name="name">product.template.form.vigotech</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Info Técnica Vigo-Tech" name="vigotech_info">
                    <group>
                        <group>
                            <field name="vigotech_component_type"/>
                            <field name="vigotech_warranty_months"/>
                        </group>
                    </group>
                    <separator string="Ficha Técnica Detallada"/>
                    <field name="vigotech_tech_specs" placeholder="Ej: Socket AM4, DDR4 3200MHz, 65W TDP..."/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>